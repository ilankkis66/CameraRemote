<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <Button 
        android:id="@+id/btnTakePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="70dp"
        android:text="camera"
        tools:ignore="HardcodedText"/> ;camera
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="280dp"
        android:layout_y="120dp"
        android:text="search"
        tools:ignore="HardcodedText" /> ;search
    <Button
        android:id="@+id/btnGetCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="125dp"
        android:layout_y="450dp"
        android:text="Get Connection"
        tools:ignore="HardcodedText"/> ;GetCon
    <ListView
        android:id="@+id/lvDeviecs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="200dp"/> ;lvDevices
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:contentDescription="description"
        tools:ignore="HardcodedText" /> ;iv
</AbsoluteLayout>