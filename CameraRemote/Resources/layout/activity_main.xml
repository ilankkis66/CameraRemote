<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008800">
    <Button 
        android:id="@+id/btnTakePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="20dp"
        android:text="camera"
        tools:ignore="HardcodedText"/> ;camera
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="280dp"
        android:layout_y="120dp"
        android:text="search"
        tools:ignore="HardcodedText" /> ;search
    <Button
        android:id="@+id/btnGetCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="125dp"
        android:layout_y="300dp"
        android:text="Get Connection"
        tools:ignore="HardcodedText" /> ;GetCon
    <Button
        android:id="@+id/btnGetPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="450dp"
        android:text="Get Picture"
        tools:ignore="HardcodedText" /> ;GetPic
    <TextView
        android:id="@+id/tvStatus"
        android:text="status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:textColor="#FFF" /> ;tvStatus
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPathFile"
        android:text="path"
        android:layout_x="0dp"
        android:layout_y="350dp"
        android:textColor="#FFF"/> ;tv
    <ListView
        android:id="@+id/lvDeviecs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="200dp"/> ;lvDevices
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_x="150dp"
        android:layout_y="400dp"
        android:id="@+id/iv"
        android:contentDescription="description"
        tools:ignore="HardcodedText" /> ;iv
    <ImageView
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:id="@+id/ivCheck"
        android:contentDescription="description"
        tools:ignore="HardcodedText" /> ;ivCheck
</AbsoluteLayout>